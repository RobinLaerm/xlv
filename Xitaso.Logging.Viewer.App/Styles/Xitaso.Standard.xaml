<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Xitaso.Logging.Viewer.App.Styles">
    
    <!-- Window -->
    <Style TargetType="Window">
        <Setter Property="Background" Value="{StaticResource Primary25}"></Setter>
        <Setter Property="Foreground" Value="{StaticResource BlackBrush}"></Setter>
        <Setter Property="BorderBrush" Value="{StaticResource Primary100}"></Setter>
        <Setter Property="BorderThickness" Value="2"></Setter>
    </Style>

    
    <Style TargetType="Label">
        <Setter Property="FontFamily" Value="Open Sans"/>
        <Setter Property="FontSize" Value="14" />
    </Style>
</ResourceDictionary>